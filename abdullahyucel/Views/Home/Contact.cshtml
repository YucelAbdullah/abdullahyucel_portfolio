@model ContactUsViewModel
@{
    ViewData["Title"] = "Bana Ulaşın";
}

<br />
<br />
<br />
<br />
@if (TempData["messageSent"] != null)
{
    <div class="alert alert-success">
        <h3>Thank you!</h3>
        <p>
            Your message has reached us
        </p>
    </div>
}

<main id="main">

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Contact</h2>
                <p>You can contact me by filling out the form below.</p>
            </div>

            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6018.381172355741!2d29.0014496277641!3d41.04296110907762!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab7a02dde1ee7%3A0xc2a9388a2a080c63!2zQmXFn2lrdGHFnywgU2luYW5wYcWfYSwgQmXFn2lrdGHFny_EsHN0YW5idWw!5e0!3m2!1str!2str!4v1672606796445!5m2!1str!2str" width="100%" height="270" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <div class="row mt-5">

                <div class="col-lg-4">
                    <div class="info">
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Location:</h4>
                            <p>Beşiktaş - İstanbul /Turkey</p>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                            <p>abdullahyuucel@gmail.com</p>
                        </div>

                        @*<div class="phone">
                                <i class="bi bi-phone"></i>
                                <h4>Call:</h4>
                                <p></p>
                            </div>*@

                    </div>

                </div>

                <div class="col-lg-8 mt-5 mt-lg-0">

                    <form method="post">

                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label" asp-for="Name"> </label>
                                    <input class="form-control" asp-for="Name" />
                                    <span asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="Email"> </label>
                                    <input class="form-control" asp-for="Email" />
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" asp-for="Subject"> </label>
                                    <input class="form-control" asp-for="Subject" />
                                    <span asp-validation-for="Subject"></span>
                                </div><div class="form-group">
                                    <label class="form-label" asp-for="Message"> </label>
                                    <textarea class="form-control" asp-for="Message"></textarea>
                                    <span asp-validation-for="Message"></span>
                                </div>
                                <br />
                                <button type="submit" class="btn btn-primary d-flex ms-auto">
                                    <i class="bi bi-send">Mesajını Gönder</i>
                                </button>
                            </div>
                        </div>

                    </form>

                </div>

            </div>

        </div>
    </section><!-- End Contact Section -->

</main><!-- End #main -->

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}